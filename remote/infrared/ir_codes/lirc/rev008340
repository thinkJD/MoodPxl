000, // Vol+		->		0x0000, // Vol-		->		0x0000, // Mute		->		0x0000, // Prog+	->		0x0000, // Prog-	->		0xD40C, // 1		->	1 on	0xD403, // 2		->	1 off	0x0000, // 3		->		0x740C, // 4		->	dim2 +	0x7403, // 5		->	dim2 -	0x0000, // 6		->		0x570C, // 7		->	dim3 +	0x5703, // 8		->	dim3 -	0x0000, // 9		->		0x0000, // 0		->		0x0000, // -/--		->		0x0000, // AV		->		0x0000, // Menu		->		0x0000, // PiP		->		0x0000, // A/B		->		0x0000, // 16:9		->		0x0000, // Info		->		0x0000, // VTX1		->		0x0000, // VTX2		->		0x0000, // VTX3		->		0x0000, // Blue		->		0x0000, // Yello	->		0x0000, // Green	->		0x0000, // Red		->		0x0000, // TV		->		0x0000  // Power	->	},